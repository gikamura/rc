# Environment Variables Example
# Copy this file to .env and fill in your actual values

# GitHub Personal Access Token for deployment
# Get this from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_pat_here

# API Configuration
API_BASE_URL=https://raw.githubusercontent.com/gikawork/data/refs/heads/main/hub
CORS_PROXY_URL=https://api.allorigins.win/raw?url=

# Cache Configuration
CACHE_DURATION_HOURS=6
MAX_RETRY_ATTEMPTS=3

# Analytics Configuration (if using external service)
ANALYTICS_ID=your_analytics_id_here

# Debug Mode
DEBUG_MODE=false

# PWA Configuration
APP_NAME=Gikamura
APP_SHORT_NAME=Gikamura
APP_DESCRIPTION=Progressive Web App para leitura de mang√°s

# Notification Settings
ENABLE_PUSH_NOTIFICATIONS=true
NOTIFICATION_CHECK_INTERVAL=21600000